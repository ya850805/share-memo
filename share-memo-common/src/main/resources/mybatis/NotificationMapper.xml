<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sharememo.mapper.NotificationMapper">
    <resultMap id="BaseResultMap" type="com.sharememo.entity.Notification">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="subject" jdbcType="VARCHAR" property="subject"/>
        <result column="content" jdbcType="VARCHAR" property="content"/>
        <result column="create_timestamp" jdbcType="TIMESTAMP" property="createTimestamp"/>
        <result column="create_user" jdbcType="VARCHAR" property="createUser"/>
        <result column="update_timestamp" jdbcType="TIMESTAMP" property="updateTimestamp"/>
        <result column="update_user" jdbcType="VARCHAR" property="updateUser"/>
    </resultMap>
    <sql id="Base_Column_List">
        id
        , subject, content, create_timestamp, create_user, update_timestamp, update_user
    </sql>

    <insert id="create">
        INSERT INTO notification (subject, content, create_timestamp, create_user, update_timestamp,
                                  update_user)
        VALUES (#{subject}, #{content}, #{createTimestamp}, #{createUser}, #{updateTimestamp}, #{updateUser})
    </insert>

    <delete id="delete">
        DELETE
        FROM notification
        WHERE id = #{id}
    </delete>
</mapper>